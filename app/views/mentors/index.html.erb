<p id="notice"><%= notice %></p>

<h1>Listing Mentors</h1>

<table class="nil">
<%= search_form_for @search do |f| %>
  <tr class="nil">
  <td class="nil"><%= f.label :name_cont, "Name contains: " %></td>
  <td class="nil"><%= f.search_field :name_cont %></td>
  </tr>
  <tr class="nil">
  <td class="nil"><%= f.label :company_cont, "Company contains: " %></td>
  <td class="nil"><%= f.search_field :company_cont %></td>
  </tr>
  <tr class="nil">
  <td class="nil"><%= f.label :occupation_cont, "Occupation contains: " %></td>
  <td class="nil"><%= f.search_field :occupation_cont %></td>
  <tr class="nil">
    <td class="nil"><%= f.submit %></td>
  </tr>
<% end %>
</table>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Occupation</th>
      <th>Company</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @mentors.each do |mentor| %>
      <tr>
        <td><%= mentor.name %></td>
        <td><%= mentor.email %></td>
        <td><%= mentor.occupation %></td>
        <td><%= mentor.company %></td>
        <td><%= link_to 'Show', mentor %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= will_paginate @mentors %>

<br>

<%= link_to 'New Mentor', new_mentor_path %>
