<p id="notice"><%= notice %></p>

<h1>Listing Mentors</h1>

<%= search_form_for @search do |f| %>
  <%= f.label :name_cont, "Name contains: " %>
  <%= f.search_field :name_cont %>

  <%= f.submit %>
<% end %>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Occupation</th>
      <th>Company</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @mentors.each do |mentor| %>
      <tr>
        <td><%= mentor.name %></td>
        <td><%= mentor.email %></td>
        <td><%= mentor.occupation %></td>
        <td><%= mentor.company %></td>
        <td><%= link_to 'Show', mentor %></td>
        <td><%= link_to 'Edit', edit_mentor_path(mentor) %></td>
        <td><%= link_to 'Destroy', mentor, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= will_paginate @mentors %>

<br>

<%= link_to 'New Mentor', new_mentor_path %>
